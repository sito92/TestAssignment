@using TestAssignment.Helpers.HtmlHelpers
@model TestAssignment.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Add";
}
<div id="page-heading">
    <h1>
        Add product
    </h1>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
        <tr>
            <th rowspan="3" class="sized">
                <img src="~/images/shared/side_shadowleft.jpg" width="20" height="300" alt=""/>
            </th>
            <th class="topleft">
            </th>
            <td id="tbl-border-top">
                &nbsp;
            </td>
            <th class="topright">
            </th>
            <th rowspan="3" class="sized">
                <img src="~/images/shared/side_shadowright.jpg" width="20" height="300" alt=""/>
            </th>
        </tr>
        <tr>
            <td id="tbl-border-left"></td>
            <td>
                <!-- start content-table-inner -->
                <div id="content-table-inner">
                    <table border="0" width="100%" cellpadding="0" cellspacing="0">
                        <tr valign="top">
                            <td>
                                <!-- start step-holder -->
                                <!-- end step-holder -->
                                <!-- start id-form -->
                                <table border="0" cellpadding="0" cellspacing="0" id="id-form">

                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.ProductName)
                                        </th>
                                        <td>
                                            @Html.EditorFor(model => model.Product.ProductName, new {htmlAttributes = new {@class = "inp-form"}})

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.ProductName)
                                        </td>

                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.CategoryId)
                                        </th>
                                        <td>
                                            @Html.DropDownListFor(model => model.Product.CategoryId,Model.AvaibleCategories, new { htmlAttributes = new { @class = "inp-form" } })

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.Category.Name)
                                        </td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.Price)
                                        </th>
                                        <td>
                                            @Html.EditorFor(model => model.Product.Price, new {htmlAttributes = new {@class = "inp-form"}})

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.Price)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.DeliverPeriod)
                                        </th>
                                        <td>
                                            @Html.EditorFor(model => model.Product.DeliverPeriod, new {htmlAttributes = new {@class = "inp-form"}})

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.DeliverPeriod)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.SuplierId)
                                        </th>
                                        <td>
                                            @Html.DropDownListFor(model => model.Product.SuplierId, Model.AvaibleSupliers, new {htmlAttributes = new {@class = "inp-form"}})

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.SuplierId)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th valign="top">
                                            @Html.DisplayNameFor(model => model.Product.MinStock)
                                        </th>
                                        <td>
                                            @Html.EditorFor(model => model.Product.MinStock, new { htmlAttributes = new { @class = "inp-form" } })

                                        </td>
                                        <td>
                                            @Html.MyValidationMessageFor(model => model.Product.MinStock)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            &nbsp;
                                        </th>
                                        <td valign="top">
                                            <input type="submit" value="" class="form-submit" />
                                            <input type="reset" value="" class="form-reset" />
                                        </td>
                                        <td></td>
                                    </tr>

                                </table>
                                <!-- end id-form -->
                            </td>
                            <td>
                                <!-- start related-activities -->
                                <!-- end related-activities -->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="~/images/shared/blank.gif" width="695" height="1" alt="blank"/>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                    <div class="clear">
                    </div>
                </div>
                <!-- end content-table-inner -->
            </td>
            <td id="tbl-border-right"></td>
        </tr>
        <tr>
            <th class="sized bottomleft">
            </th>
            <td id="tbl-border-bottom">
                &nbsp;
            </td>
            <th class="sized bottomright">
            </th>
        </tr>
    </table>
    <div class="clear">
        &nbsp;
    </div>
}

@section Scripts {
   
}